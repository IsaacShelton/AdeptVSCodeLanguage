{
    "name": "adept-language-insight",
    "displayName": "Adept Language Insight",
    "description": "Adept Language Insight for VS Code",
    "author": "DockySoft",
    "license": "GPL-3.0-only",
    "version": "2.1.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/IsaacShelton/AdeptVSCodeLanguage"
    },
    "publisher": "DockySoft",
    "categories": [
        "Programming Languages"
    ],
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:adept"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Adept Language Insight Configuration",
            "properties": {
                "adeptLanguageInsight.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "adeptLanguageInsight.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "adeptLanguageInsight.root": {
                    "scope": "window",
                    "type": "string",
                    "default": "",
                    "description": "The root folder that the desired compiler lives in"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.3",
        "@types/node": "^12.12.0",
        "@typescript-eslint/parser": "^2.3.0",
        "eslint": "^6.4.0",
        "mocha": "^8.1.1",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "file-uri-to-path": "^2.0.0",
        "path": "^0.12.7",
        "vscode-languageclient": "^6.1.3",
        "vscode-languageserver-textdocument": "^1.0.1"
    }
}
